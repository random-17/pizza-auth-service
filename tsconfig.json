{
  "compilerOptions": {
    "target": "es2016",
    "moduleResolution": "Node",
    "module": "commonjs",
    "pretty": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["./src/**/*", "eslint.config.mjs", "jest.config.mjs"],
  "exclude": ["node_modules"]
}
